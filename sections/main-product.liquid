<p>{{ product.title }}</p>
<p>{{ product.price | money }}</p>
<div>
    {{ product.description }}
</div>

{% form 'product', product %}
    <select name="id">
        {% for variant in product.variants %}
            <option value="{{ variant.id}}">{{ variant.title }}</option>
        {% endfor %}
    </select>
  
    <button type="submit" value="Add to cart">Add to cart</button>

{% endform %}